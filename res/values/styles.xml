<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="rubix" parent="@android:style/Theme.Holo.Light">
    <item name="vpiTitlePageIndicatorStyle">@style/titlePageIndicator</item>
  </style>

  <style name="titlePageIndicator">
    <item name="android:background">@android:drawable/title_bar</item>
    <item name="footerColor">@android:color/darker_gray</item>
    <item name="footerLineHeight">1dp</item>
    <item name="footerIndicatorHeight">3dp</item>
    <item name="footerIndicatorStyle">underline</item>
    <item name="textColor">@android:color/primary_text_dark</item>
    <item name="selectedColor">@android:color/primary_text_dark</item>
    <item name="selectedBold">true</item>
  </style>
</resources>
